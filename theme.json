{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "color": {
      "custom": true,
      "customGradient": true,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "slug": "primary",
          "color": "#071a2b",
          "name": "VTS Primary"
        },
        {
          "slug": "panel",
          "color": "#0d2940",
          "name": "VTS Panel"
        },
        {
          "slug": "accent",
          "color": "#0d5a8a",
          "name": "VTS Accent"
        },
        {
          "slug": "muted",
          "color": "#9fb6c8",
          "name": "VTS Muted"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "lineHeight": true,
      "textDecoration": true,
      "fontFamilies": [
        {
          "fontFamily": "\"IBM Plex Sans\", system-ui, -apple-system, sans-serif",
          "slug": "primary",
          "name": "IBM Plex Sans"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.125rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "1.5rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "2rem",
          "name": "2X Large"
        },
        {
          "slug": "xxx-large",
          "size": "3rem",
          "name": "3X Large"
        }
      ]
    },
    "spacing": {
      "customSpacingSize": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "blocks": {
      "core/button": {
        "color": {
          "palette": [
            {
              "slug": "accent",
              "color": "#0d5a8a",
              "name": "Accent"
            }
          ]
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "#071a2b",
      "text": "#ffffff"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": {
          "text": "#9fb6c8"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "3rem",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "2rem",
          "fontWeight": "600",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "1.5rem",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
